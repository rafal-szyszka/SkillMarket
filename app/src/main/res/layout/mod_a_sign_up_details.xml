<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/mod_a_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/app_logo"
            android:layout_gravity="center_horizontal"/>

        <include
            android:id="@+id/sign_up_address"
            layout="@layout/utils_labeled_input_text" />

        <include
            android:id="@+id/sign_up_city"
            layout="@layout/utils_labeled_input_text" />

        <include
            android:id="@+id/sign_up_phone_number"
            layout="@layout/utils_labeled_input_text" />

        <Button
            android:id="@+id/sign_up_create_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_create_account_text"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/colorPrimary"/>

        <TextView
            android:id="@+id/sign_up_have_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_have_account_text"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textIsSelectable="false"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>
</LinearLayout>
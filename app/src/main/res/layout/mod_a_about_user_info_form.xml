<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"
        android:padding="2dp"
        android:text="Dane podstawowe:"
        android:textSize="18sp"
        android:textColor="@android:color/background_light"
        android:background="@drawable/bg_bordered_dark" />

    <include
        android:id="@+id/info_form_first_row"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/utils_info_form_row"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <include
        android:id="@+id/info_form_second_row"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/utils_info_form_row"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <include
        android:id="@+id/info_form_third_row"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/utils_info_form_row"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <include
        android:id="@+id/info_form_fourth_row"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/utils_info_form_row"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

</LinearLayout>
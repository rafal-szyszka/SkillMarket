<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="it.szyszka.skillmarket">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_logo_2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_logo_2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".modules.user.activities.SignInActivity_"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- User activities -->
        <activity
            android:name=".modules.user.activities.SignUpActivity_"
            android:screenOrientation="portrait" />
        <activity
            android:name=".modules.user.activities.SignUpDetailsActivity_"
            android:screenOrientation="portrait" />
        <activity
            android:name=".modules.user.activities.UserProfileActivity_"
            android:screenOrientation="portrait" />

    </application>

</manifest>